<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/searchItemImage"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:src="@drawable/ic_launcher"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/searchItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_toRightOf="@id/searchItemImage"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/searchItemImage"
        android:layout_alignTop="@+id/searchItemImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="id:"
        android:id="@+id/searchIdText"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/searchItemImage"
        android:layout_alignBottom="@+id/searchItemImage"
        android:gravity="center_vertical" />

</RelativeLayout> 